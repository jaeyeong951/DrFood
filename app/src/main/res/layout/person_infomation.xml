<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/topPanel_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E4FDF3">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="회원 정보"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/topPanel_1"
        android:background="#3E000000">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/abcd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/abc"
        android:background="#11000000"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본 정보"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/abcde"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/abcd"
        >
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="16dp"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/person_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/text_email"
            android:textSize="16dp"
            android:text="taxol1203@gmail.com"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/abcdef"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/abcde"
        android:background="#11000000"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abcdef"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="성별"
        android:textSize="18dp" />
    
    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/text_sex"
        android:layout_below="@+id/abcdef"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        >
        <RadioButton
            android:layout_weight="1"
            android:text="남성"
            android:id="@+id/rg_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:layout_weight="1"
            android:text="여성"
            android:id="@+id/rg_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sex"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="연령"
        android:textSize="18dp" />
    
    <EditText
        android:id="@+id/person_age"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/text_age"
        android:layout_below="@+id/rg_sex"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/person_age"
        android:layout_below="@+id/rg_sex"
        android:text="년생"
        android:layout_marginTop="20dp"/>




    <LinearLayout
        android:id="@+id/button팝업"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/text_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="팝업"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mOnPopupClick"/>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/button팝업"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/User_Information_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            />
        <Button
            android:id="@+id/Go_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            />
    </LinearLayout>




</RelativeLayout>
